# ----------------------------------------------------------------------
# Set units to SI.
# ----------------------------------------------------------------------
${Units('si')}

# ----------------------------------------------------------------------
# Create surface using vertices
# ----------------------------------------------------------------------

# Block is 200 km x 100 km with uniform topography slope.
# -100 km <= x <= 100 km 
# -100 km <= y <= 0 m
reset
${topoH=1.0*km}
${topoL=20.0*km}
create vertex {-100.0*km} {-100.0*km}  0.0
create vertex {-100.0*km} {-0.0*km}  0.0
create vertex {-0.5*topoL} {0.0*km}  0.0
create vertex {0.0*km} {topoH}  0.0
create vertex {+0.5*topoL} {0.0*km}  0.0
create vertex {+100.0*km} {0.0*km}  0.0
create vertex {+100.0*km} {-100.0*km}  0.0
create surface vertex 1 2 3 4 5 6 7
delete vertex all

# ----------------------------------------------------------------------
# Create interface surfaces
# ----------------------------------------------------------------------
${crustD=30.0*km}

# Constant thickness crust
create vertex {-100.0*km} {-crustD}  0.0
create vertex {+100.0*km} {-crustD}  0.0
split surface 1 across location vertex 8 location vertex 9

delete vertex all


